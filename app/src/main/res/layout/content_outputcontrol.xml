<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_outputcontrol"
    tools:context="com.mithu.mithunmistry.mithun.OutputcontrolActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 1 ON"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="led1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 2 ON"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="led2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 3 ON"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="led3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 4 ON"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="led4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 5 ON"
            android:id="@+id/button7"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="led5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 6 ON"
            android:id="@+id/button8"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="led6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 7 ON"
            android:id="@+id/button9"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="led7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All LED ON"
            android:id="@+id/button10"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="allLed" />

    </LinearLayout>
</ScrollView>
