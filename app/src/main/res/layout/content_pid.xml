<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_pid"
    tools:context="com.mithu.mithunmistry.mithun.PidActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set point - "
        android:id="@+id/textView25"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/spPID"
        android:layout_alignStart="@+id/spPID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/spPID"
        android:layout_below="@+id/textView25"
        android:layout_alignLeft="@+id/setPID"
        android:layout_alignStart="@+id/setPID"
        android:layout_alignRight="@+id/setPID"
        android:layout_alignEnd="@+id/setPID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/setPID"
        android:layout_below="@+id/spPID"
        android:layout_centerHorizontal="true"
        android:onClick="setPointPID" />
</RelativeLayout>
