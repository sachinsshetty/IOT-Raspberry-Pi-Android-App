<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_parameter"
    tools:context="com.mithu.mithunmistry.mithun.ParameterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageButton
                android:layout_width="132dp"
                android:layout_height="146dp"
                android:id="@+id/imageButton"
                android:src="@drawable/temperature"
                android:layout_weight="0.05"
                android:onClick="temperature"
                android:layout_margin="6dp" />

            <ImageButton
                android:layout_width="142dp"
                android:layout_height="146dp"
                android:id="@+id/imageButton2"
                android:src="@drawable/finalhumidity"
                android:onClick="humidity"
                android:layout_margin="6dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageButton
                android:layout_width="132dp"
                android:layout_height="146dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/level"
                android:layout_weight="0.04"
                android:layout_margin="6dp"
                android:onClick="level" />

            <ImageButton
                android:layout_width="142dp"
                android:layout_height="146dp"
                android:id="@+id/imageButton4"
                android:src="@drawable/moisture"
                android:onClick="moisture"
                android:layout_margin="6dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
